<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <assignments>
        <name>Set_State</name>
        <label>Set State</label>
        <locationX>650</locationX>
        <locationY>250</locationY>
        <assignmentItems>
            <assignToReference>checkoutSession.State</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>newState</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Save_Session</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Check_Session_isProcessing</name>
        <label>Check Session isProcessing</label>
        <locationX>393</locationX>
        <locationY>252</locationY>
        <defaultConnector>
            <targetReference>Refresh_page</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>isProcessing true</defaultConnectorLabel>
        <rules>
            <name>isProcessing_false</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>checkoutSession.IsProcessing</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_State</targetReference>
            </connector>
            <label>isProcessing false</label>
        </rules>
    </decisions>
    <interviewLabel>Shipping {!$Flow.CurrentDateTime}</interviewLabel>
    <isTemplate>true</isTemplate>
    <label>(Re-entrant) Subflow - Update Checkout State</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>CheckoutFlow</processType>
    <recordUpdates>
        <name>Save_Session</name>
        <label>Save Session</label>
        <locationX>900</locationX>
        <locationY>250</locationY>
        <faultConnector>
            <targetReference>Show_Error</targetReference>
        </faultConnector>
        <inputReference>checkoutSession</inputReference>
    </recordUpdates>
    <start>
        <locationX>24</locationX>
        <locationY>40</locationY>
        <connector>
            <targetReference>Fetch_Session</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <subflows>
        <description>Fetches the current checkout session object without creating a new one.</description>
        <name>Fetch_Session</name>
        <label>Fetch Session</label>
        <locationX>150</locationX>
        <locationY>250</locationY>
        <connector>
            <targetReference>Check_Session_isProcessing</targetReference>
        </connector>
        <flowName>Reentrant_Subflow_Checkout_Session</flowName>
        <inputAssignments>
            <name>cartId</name>
            <value>
                <elementReference>cartId</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>expCurrentState</name>
            <value>
                <elementReference>expCurrentState</elementReference>
            </value>
        </inputAssignments>
        <outputAssignments>
            <assignToReference>checkoutSession</assignToReference>
            <name>checkoutSession</name>
        </outputAssignments>
    </subflows>
    <subflows>
        <name>Refresh_page</name>
        <label>Refresh page</label>
        <locationX>400</locationX>
        <locationY>500</locationY>
        <flowName>Reentrant_Subflow_Error</flowName>
        <inputAssignments>
            <name>cartId</name>
            <value>
                <elementReference>cartId</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>refreshPage</name>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
    <subflows>
        <name>Show_Error</name>
        <label>Show Error</label>
        <locationX>900</locationX>
        <locationY>500</locationY>
        <flowName>Reentrant_Subflow_Error</flowName>
